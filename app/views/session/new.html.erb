<div class="ui container">
  <div class="ui grid">
    <div class="row">
      <div class="column centered six wide">
        <div class="ui attached message">
          <div class="header">Log in</div>
        </div>
        <div class="ui attached segment">
          <div class="ui form">
            <%= form_tag(login_path, class:"ui large form") do %>
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <%= email_field_tag :email, nil, placeholder:"Email address" %>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <%= password_field_tag :password, nil, placeholder:"Password" %>
              </div>
            </div>

            <div>
              <%= submit_tag("Login", class:"ui fluid large teal submit button") %>
            </div>
       
            <% end %>
  
          </div>
        </div>
        <% if flash[:error].present? %>
        <div class="ui bottom attached error message">
            <%= flash[:error] %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  

</div>
